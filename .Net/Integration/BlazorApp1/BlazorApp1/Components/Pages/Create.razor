		employees = await dbcontext.Employees.ToListAsync();

	

	}
		 void FormSubmitted()
	{
		
		List<Personal> personals= new List<Personal>();
		List<Employment> employments = new List<Employment>();
		int employeeId = employees.Count();
		Employee newEmployee = new Employee(employeeId, Convert.ToUInt16(employeeId), employeeRegister.LastName+" ", employeeRegister.MidName + " " + employeeRegister.FirstName, Convert.ToDecimal(employeeRegister.Ssn), payRates[employeeRegister.IdPayrate].PayRateName, 1, employeeRegister.VacationDays, employeeRegister.PaidToDate, employeeRegister.PaidLastYear);
